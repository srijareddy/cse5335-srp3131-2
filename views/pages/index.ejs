<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
<script>
$( document ).ready(function() {
    console.log( "ready!" );
    localStorage.setItem("i", "1");
    
    
    var myVar = setInterval(function(){ addData() }, 500);
    function addData(){
      i = localStorage.getItem("i");
      i =  parseInt(i); 
    $.get( "/p/"+i.toString(), function( data ) {
  console.log(i);
  console.log(data);
  var div = document.getElementById('data');
div.innerHTML = div.innerHTML +"<div>"+JSON.stringify(data)+"</div>";
  
  
  i = i+1;
